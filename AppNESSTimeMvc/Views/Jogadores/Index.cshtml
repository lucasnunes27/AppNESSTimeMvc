@model IEnumerable<AppNESSTimeMvc.Models.Jogador>

@{
    ViewData["Title"] = "Lista de Atletas";
}

@if (TempData["NovoJogador"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3>@TempData["NovoJogador"].ToString()</h3>
    </div>
}

@if (TempData["EditJogador"] != null)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3>@TempData["EditJogador"].ToString()</h3>
    </div>
}

@if (TempData["DeleteJogador"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3>@TempData["DeleteJogador"].ToString()</h3>
    </div>
}
    


<h1>Lista de Atletas do Time</h1>

<style>
    body {
        background: black;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
    }

    header {
        background: black;
    }

    section {
        background: black;
        padding: 20px;
    }

    footer {
        background: white;
    }
</style>

<a href="@Url.Action("Create", "Jogadores")" class="btn" style="background:#ed1c2e">Adicionar Novo Atleta</a>
<br />
<br />
<table style="color: white" class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Posicao)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Gols)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Posicao)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Gols)
            </td>

            <td>
                <a href="@Url.Action("Edit", "Jogadores", new { id=item.Id })" class="btn btn-outline-danger">Editar</a>
                <a href="@Url.Action("Details", "Jogadores", new { id=item.Id })" class="btn  btn-outline-danger">Inspecionar</a>
                <a href="@Url.Action("Delete", "Jogadores", new { id=item.Id })" class="btn  btn-outline-danger">Apagar</a>
            </td>
        </tr>
    }

</table>
