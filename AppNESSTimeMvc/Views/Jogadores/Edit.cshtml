@model AppNESSTimeMvc.Models.Jogador

@{
    ViewData["Title"] = "Editar Atleta";
}

<h1>Editar Atleta</h1>

<style>
    body {
        background: black;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
    }

    header {
        background: black;
    }

    section {
        background: black;
        padding: 20px;
    }

    footer {
        background: white;
    }
</style>

<h4>@Model.NomeCompleto</h4>
<hr />

<form asp-action="Edit">
    <div class="row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-4">
            <label asp-for="TimeId" class="control-label"></label>
            <select asp-for="TimeId" class="form-control" asp-items="ViewBag.TimeId"></select>
            <span asp-validation-for="TimeId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="NomeCompleto" class="control-label"></label>
            <input asp-for="NomeCompleto" class="form-control" />
            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Idade" class="control-label"></label>
            <input asp-for="Idade" class="form-control" />
            <span asp-validation-for="Idade" class="text-danger"></span>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </label>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Posicao" class="control-label"></label>
            <input asp-for="Posicao" class="form-control" />
            <span asp-validation-for="Posicao" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Jogos" class="control-label"></label>
            <input asp-for="Jogos" class="form-control" />
            <span asp-validation-for="Jogos" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Gols" class="control-label"></label>
            <input asp-for="Gols" class="form-control" />
            <span asp-validation-for="Gols" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Data" class="control-label"></label>
            <input asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <a class="btn btn-outline-danger" asp-action="Index">Voltar</a>
        <input type="submit" value="Salvar" class="btn" style="background:#ed1c2e" />
    </div>
</form>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
